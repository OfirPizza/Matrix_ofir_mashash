<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="150dp"
    android:layout_gravity="end"
    android:layout_margin="10dp"
    android:layoutDirection="rtl">

    <ImageView
        android:id="@+id/img_child_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:background="@color/colorAccent" />


    <TextView
        android:id="@+id/child_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/child_item_sub_title"
        app:layout_constraintEnd_toEndOf="@id/img_child_item"
        app:layout_constraintStart_toStartOf="@id/img_child_item"
        tools:text="שדגשדגשדגשדג" />

    <TextView
        android:id="@+id/child_item_sub_title"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_child_item"
        app:layout_constraintEnd_toEndOf="@id/img_child_item"
        app:layout_constraintStart_toStartOf="@id/img_child_item"
        tools:text="שדגשדגשדגשדג" />


</androidx.constraintlayout.widget.ConstraintLayout>


